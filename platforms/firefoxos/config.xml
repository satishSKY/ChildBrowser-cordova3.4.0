<?xml version='1.0' encoding='utf-8'?>
<widget id="com.sky.hello" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HelloCordova</name>
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <feature name="Camera">
        <param name="firefoxos-package" value="Camera" />
    </feature>
    <feature name="Contacts">
        <param name="firefoxos-package" value="Contacts" />
    </feature>
    <feature name="Device">
        <param name="firefoxos-package" value="Device" />
    </feature>
    <feature name="Notification">
        <param name="firefoxos-package" value="Notification" />
    </feature>
    <feature name="Geolocation">
        <param name="firefoxos-package" value="Geolocation" />
    </feature>
    <feature name="Network">
        <param name="firefoxos-package" value="Network" />
    </feature>
    <name>CordovaDemo</name>
    <description>
    A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
</widget>
